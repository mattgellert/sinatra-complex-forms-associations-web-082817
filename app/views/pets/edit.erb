<h1>Update Pet</h1>

<h2>You are editing: <%=@pet.name%></h2>

<form action="/pets/<%=@pet.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name"></br>

  <label>Select Current Owner:</label></br>
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner_id.equal?(owner.id)%>><%=owner.name%></input></br>
  <%end%>

  <label>Or Create A New Owner</label></br>
    Name: <input type="text" name="owner[name]" id="owner_name">
  <button type="submit" id="submit">Update Pet</button>
</form>
